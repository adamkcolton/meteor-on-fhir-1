{
  "rules": {
    "strict": 0,
    "indent": [2, 2],
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "always"],
    "no-unused-vars": ["warn", { "vars": "all", "args": "after-used" }],
    "react/jsx-uses-vars": 1
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": "eslint:recommended",
  parserOptions: {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true,
      "modules": true
    }
  },
  "plugins": [
    "react",
    "meteor"
  ],
  "globals": {
    "Session": true
  }
}
